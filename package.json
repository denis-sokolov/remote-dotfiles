{
  "name": "remote-dotfiles",
  "version": "1.2.2",
  "description": "Deploy your dotfiles",
  "main": "src/index.js",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "async": "^1.2.0",
    "cli": "^0.7.1",
    "gulp-concat": "^2.4.3",
    "is": "^3.0.1",
    "map-stream": "0.1.0",
    "mkdirp": "^0.5.0",
    "promise": "^7.0.1",
    "read-only-stream": "^1.1.1",
    "shell-quote": "^1.4.2",
    "through2": "^2.0.0",
    "vinyl": "^0.5.0",
    "vinyl-fs": "^1.0.0"
  },
  "devDependencies": {
    "coveralls": "^2.11.2",
    "eslint": "^0.13.0",
    "istanbul": "^0.3.5",
    "jshint": "^2.6.0",
    "tap-colorize": "^1.2.0",
    "tape": "^4.0.0",
    "watch": "^0.16.0"
  },
  "scripts": {
    "lint": "jshint src test && eslint src test",
    "test": "tape test/*.js | tap-colorize",
